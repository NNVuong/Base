@{
    if (User.Identity is { IsAuthenticated : true } && (User.IsInRole(UserRoleType.DataEntry) || User.IsInRole(UserRoleType.Administrator) || User.IsInRole(UserRoleType.SuperAdministrator)))
    {
        <div class="row">
            @if (User.IsInRole(UserRoleType.Administrator) || User.IsInRole(UserRoleType.SuperAdministrator))
            {
                const string areaName = AreaName.Administrator;
                <div class="col-xl-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">@areaName</h4>
                            <div class="list-group">
                                <a asp-area="@areaName" asp-controller="CategoryManagement" asp-action="Index" class="list-group-item list-group-item-action">
                                    <i class="ri-file-list-3-fill fs-22"></i>
                                    <span> Quản lý danh mục </span>
                                </a>
                            </div>
                        </div> <!-- end card-body -->
                    </div> <!-- end card-->
                </div>
                <!-- end col -->
            }

            @if (User.IsInRole(UserRoleType.DataEntry) || User.IsInRole(UserRoleType.SuperAdministrator))
            {
                const string areaName = AreaName.DataEntry;

                <div class="col-xl-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">@areaName</h4>
                            <div class="list-group">

                            </div>
                        </div> <!-- end card-body -->
                    </div> <!-- end card-->
                </div>
                <!-- end col -->
            }

            @if (User.IsInRole(UserRoleType.SuperAdministrator))
            {
                const string areaName = AreaName.Identity;
                <div class="col-xl-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">@areaName</h4>
                            <div class="list-group">
                                <a asp-area="@areaName" asp-controller="UserManagement" asp-action="Index" class="list-group-item list-group-item-action">
                                    <i class="ri-contacts-fill fs-22"></i>
                                    <span> Quản lý người dùng </span>
                                </a>
                                <a asp-area="@areaName" asp-controller="RoleManagement" asp-action="Index" class="list-group-item list-group-item-action">
                                    <i class="ri-group-2-fill fs-22"></i>
                                    <span> Quản lý quyền truy cập </span>
                                </a>
                                <a asp-area="@areaName" asp-controller="UserRoleManagement" asp-action="Index" class="list-group-item list-group-item-action">
                                    <i class="ri-admin-fill fs-22"></i>
                                    <span> Quản lý quyền truy cập của người dùng </span>
                                </a>
                                <a asp-area="@areaName" asp-controller="CampusManagement" asp-action="Index" class="list-group-item list-group-item-action">
                                    <i class="ri-school-fill fs-22"></i>
                                    <span> Quản lý campus</span>
                                </a>
                                <a asp-area="@areaName" asp-controller="UserCampusManagement" asp-action="Index" class="list-group-item list-group-item-action">
                                    <i class="ri-user-location-fill fs-22"></i>
                                    <span> Quản lý campus của người dùng </span>
                                </a>
                            </div>
                        </div> <!-- end card-body -->
                    </div> <!-- end card-->
                </div>
                <!-- end col -->
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-md-6 ">
                        <div class="text-center">
                            <h3 class="mt-3">Hệ thống quản lý báo cáo cơ sở vật chất</h3>
                            <p class="text-muted mt-3">
                                Mọi thắc mắc, vấn đề phát sinh, vui lòng liên hệ cán bộ quản lý
                            </p>
                        </div>
                    </div><!-- end col -->
                </div><!-- end row -->
                <div class="row mt-4 justify-content-center">
                    <div class="col-xl-6">
                        <div class="p-2">
                            <div class="accordion custom-accordion" id="accordionExample1">
                                <div class="accordion-item border rounded mb-2">
                                    <div class="accordion-header">
                                        <a class="accordion-button bg-light fw-medium text-dark" data-bs-toggle="collapse" data-bs-target="#collapseStaff" aria-expanded="false" aria-controls="collapseStaff">
                                            Cán bộ phụ trách
                                        </a>
                                    </div>

                                    <div id="collapseStaff" class="collapse" data-bs-parent="#accordionExample1">
                                        <div class="p-3">
                                            <p class="mb-0">
                                                Họ và tên: <a class="text-primary">Ngô Nguyễn Vương</a>
                                            </p>
                                            <p class="mb-0">
                                                Bộ phận: <a class="text-primary">PTUD (FEHO)</a>
                                            </p>
                                            <p class="mb-0">
                                                Mail FPT: <a class="text-primary">vuongnn8@fpt.edu.vn</a>
                                            </p>
                                            <p class="mb-0">
                                                Mail FE: <a class="text-primary">vuongnn8@fe.edu.vn</a>
                                            </p>
                                            <p class="mb-0">
                                                Di động/Zalo: <a class="text-primary">+84768482178</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- accordian end -->
                        </div>
                    </div>
                    <!-- end col -->
                </div>
                <!-- end row -->
            </div>
        </div>
    }
}